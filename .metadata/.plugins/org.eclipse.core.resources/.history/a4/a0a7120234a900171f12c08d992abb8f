package ronan_hanley.inside_av;

import org.newdawn.slick.GameContainer;
import org.newdawn.slick.SlickException;
import org.newdawn.slick.state.StateBasedGame;

/**
 * Project started on 4/10/17
 * @author Ronan Hanley
 *
 */
public class InsideAV extends StateBasedGame {
	public static final String GAME_NAME = "Inside AV";
	
	public InsideAV() {
		super(GAME_NAME);
	}

	@Override
	public void initStatesList(GameContainer container) throws SlickException {
		
	}
	
	// Main Method
	// Copied from http://slick.ninjacave.com/wiki/index.php?title=Game_States
	// But heavily modified
    public static void main(String[] args) {
        try {
            AppGameContainer app = new AppGameContainer(new Application("My Game v" + VERSION));
            app.setDisplayMode(WIDTH, HEIGHT, false);
            app.setTargetFrameRate(FPS);
            app.setShowFPS(true);
            app.start();
        } catch(SlickException e) {
            e.printStackTrace();
        }
    }

}
