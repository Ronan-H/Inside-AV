package ronan_hanley.inside_av.menu_button;

import org.newdawn.slick.Color;

/**
 * Represents a rectangular button on the screen, that
 * can be clicked.
 * @author Ronan
 */
public class MenuButton {
	private int x;
	private int y;
	private int width;
	private int height;
	private Color color;
	private Color hoverColor;
	private String text;
	
	public MenuButton(int x, int y, int width, int height, Color color, Color hoverColor, Strint text) {
		this.x = x;
		this.y = y;
		this.width = width;
		this.height = height;
		this.color = color;
		this.hover = hoverColor;
	}
	
}
