package ronan_hanley.inside_av.weapons_systems;

import java.util.ArrayList;

public class WeaponsSystemGrid {
	private WeaponsSystem[][] grid;
	private ArrayList<WeaponsSystem> weaponsSystems;
	
	public WeaponsSystemGrid(int width, int height) {
		grid = new WeaponsSystem[height][width];
		weaponsSystems = new ArrayList<WeaponsSystem>();
	}
	
	public void addWeaponsSystem(WeaponsSystem weapon, int x, int y) {
		grid[y][x] = weapon;
	}
	
	public boolean tileHasWeapon(int x, int y) {
		return (grid[y][x] != null);
	}
	
}
